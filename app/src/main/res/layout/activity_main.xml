<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D2D2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/steve_jobs"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:text="Los Angeles"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintCircle="@id/name"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <androidx.cardview.widget.CardView
        android:layout_width="65pt"
        android:layout_height="80pt"
        android:layout_marginTop="19dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/unnamed" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ro"
        android:text="follow"
        android:textColor="#FFFFFF"
        app:layout_constraintCircle="@id/name"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address" />

    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/btn"
        app:layout_constraintCircleAngle="215"
        app:layout_constraintCircleRadius="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn" />

    <TextView
        android:id="@+id/follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9545"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/post"
        app:layout_constraintCircle="@id/btn"
        app:layout_constraintCircleAngle="145"
        app:layout_constraintCircleRadius="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textColor="#A3A1A1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post" />

    <TextView
        android:id="@+id/f2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textColor="#A3A1A1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/follower" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/phreee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ponee"
        app:layout_constraintLeft_toRightOf="@id/i1"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/carrrrr"
        app:layout_constraintLeft_toRightOf="@id/i2"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/phreee"
        app:layout_constraintLeft_toRightOf="@id/i3"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <ImageView
        android:id="@+id/a1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/facebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i1" />

    <ImageView
        android:id="@+id/a2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/android"
        app:layout_constraintLeft_toRightOf="@id/a1"
        app:layout_constraintTop_toBottomOf="@+id/i2" />

    <ImageView
        android:id="@+id/a3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/instagram"
        app:layout_constraintLeft_toRightOf="@id/a2"
        app:layout_constraintTop_toBottomOf="@+id/i3" />

    <ImageView
        android:id="@+id/a4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/skype"
        app:layout_constraintLeft_toRightOf="@id/a3"
        app:layout_constraintTop_toBottomOf="@+id/i3" />

    <ImageView
        android:id="@+id/a5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/twitter"
        app:layout_constraintLeft_toRightOf="@id/a4"
        app:layout_constraintTop_toBottomOf="@+id/i4" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:background="#847d7d"
        app:layout_constraintTop_toBottomOf="@+id/a1" />

    <TextView
        android:id="@+id/abt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:text="About"
        android:textColor="#3E3D3D"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/conc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:ems="18"
        android:text="@string/a"
        android:textColor="#3E3D3D"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abt" />
</androidx.constraintlayout.widget.ConstraintLayout>